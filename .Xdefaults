*font: xft:DejaVu Sans Mono:pixelsize=14:antialias=true:hinting=true
*boldFont: xft:DejaVu Sans Mono:bold:pixelsize=14:antialias=true:hinting=true
*letterSpace: -1
*saveLines: 12000
*scrollBar: false

! http://upload.wikimedia.org/wikipedia/commons/9/95/Xterm_color_chart.png 

! Perl extensions (note: you could add 'tabbed' to perl-ext-common for tabs)
*perl-ext-common:      default,matcher
*matcher.button:       1
*urlLauncher:          firefox

! Cursor
*cursorBlink:          false
*cursorUnderline:      false

! Pointer
*pointerBlank:         true

!!Source http://github.com/altercation/solarized

*background: #121212
*foreground: #eeeeee
*fadeColor: #002b36
*cursorColor: #93a1a1
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1

!! black normal/highlighted
*color0: #121212
*color8: #3a3a3a

!! red normal/highlighted
*color1: #ff5f5f
*color9: #ff0000

!! green normal/highlighted
*color2: #00ffd7
*color10: #5fffd7

!! yellow normal/highlighted
*color3: #afff5f
*color11: #afff00

!! blue normal/highlighted
*color4: #00afff
*color12: #5fffff

!! magenta normal/highlighted
*color5: #af5fd7
*color13: #af5fff

!! cyan normal/highlighted
*color6: #87ffff
*color14: #87ffd7
